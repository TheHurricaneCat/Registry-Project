<ProdMod>
    text: "ENTER THE PRODUCTS"
    size_hint_y: None
    height: 70
    background_color: (0,0,0,1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ProdScroll>
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False    
        GridLayout:
            cols: 1
            size_hint: (1, None)
            height: self.minimum_height
            pos: self.pos
            id: prodContainer

<ProdSelection>
    size_hint_y: None
    height: 50
    Label:
        id: label1
        text: "-"
    Button: 
        id: button1
        varcont: "0"
        text: "ADD"
        on_press: root.onProdPress()

<KeyMod>
    text: "ENTER THE QUANTITY"
    size_hint_y: None
    height: 70

<KeyContainer>
    GridLayout:
        id: keyContainer
        cols: 3

<KeyPad>
    Button:
        id: button2
        text: "-"
        on_press: root.onKeyPress()

<ViewContainer>
    BoxLayout:
        id: viewContainer
        orientation: "vertical"

<ViewMod>
    text: "CURRENT PRODUCTS"
    size_hint_y: None
    height: 70

<ViewPad>
    orientation: "vertical"
    Button:
        id: button3
        text: "CLEAR"
        on_press: root.onClearPress()
    Button:
        id: button4
        text: "ENTER"
        on_press: root.onEnterPress()

<ViewScroll> 
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False    
        GridLayout:
            cols: 1
            size_hint: (1, None)
            height: self.minimum_height
            pos: self.pos
            id: viewScrollContainer

<ViewSelection>
    size_hint_y: None
    height: 50
    GridLayout:
        cols: 4
        index: 0
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Picture" 
        BoxLayout: 
            orientation: "vertical"
            Label: 
                id: viewTitle
                halign: 'left'
                text: "[b] LONG LONG PRODUCT TITLE [/b]"
                markup: True
            Label: 
                id: viewQuantity
                halign: 'left'
                text: "Quantity"
                markup: True
        BoxLayout:
            orientation: "vertical"
            Label:
                id: viewPrice
                text: "[b] Price [/b]"
                markup: True
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Remove"
                on_press: root.removeItem()
        

<TestGrid>
    GridLayout:
        cols: 3
        size: root.width, root.height
        
        #PRODUCT SLICE
        BoxLayout:
            orientation: "vertical"
            id: prodGrid            

        BoxLayout:
            orientation: "vertical"
            id: keyGrid
            
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 3
            id: viewGrid
