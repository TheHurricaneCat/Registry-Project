<ProdMod>
    text: "ENTER THE PRODUCTS"
    size_hint_y: None
    height: 70
    background_color: (0,0,0,1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ProdScroll>
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False    
        GridLayout:
            cols: 1
            size_hint: (1, None)
            height: self.minimum_height
            pos: self.pos
            id: prodContainer

<ProdSelection>
    size_hint_y: None
    height: 70
    Label:
        id: label1
        text: "-"
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]
        halign: "center"
        markup: True
    Button: 
        id: button1
        varcont: "0"
        text: "ADD"
        on_press: root.onProdPress()

<KeyMod>
    text: "ENTER THE QUANTITY"
    size_hint_y: None
    height: 70

<KeyContainer>
    GridLayout:
        id: keyContainer
        cols: 3

<KeyPad>
    Button:
        id: button2
        text: "-"
        on_press: root.onKeyPress()

<ViewContainer>
    BoxLayout:
        id: viewContainer
        orientation: "vertical"

<ViewMod>
    text: "CURRENT PRODUCTS"
    size_hint_y: None
    height: 70

<ViewPad>
    orientation: "vertical"
    Button:
        id: button3
        text: "CLEAR"
        on_press: root.onClearPress()
    Button:
        id: button4
        text: "ENTER"
        on_press: root.onEnterPress()

<ViewScroll> 
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False    
        GridLayout:
            cols: 1
            size_hint: (1, None)
            height: self.minimum_height
            pos: self.pos
            id: viewScrollContainer

<ViewSelection>
    size_hint_y: None
    height: 50
    GridLayout:
        cols: 4
        index: 0
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Picture" 
        BoxLayout: 
            orientation: "vertical"
            Label: 
                id: viewTitle
                text: "[b] LONG LONG PRODUCT TITLE [/b]"
                #size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: "center"
                markup: True
            Label: 
                id: viewQuantity
                halign: 'left'
                text: "Quantity"
                markup: True
        BoxLayout:
            orientation: "vertical"
            Label:
                id: viewPrice
                text: "[b] Price [/b]"
                markup: True
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Remove"
                on_press: root.removeItem()

#: import Factory kivy.factory.Factory

<StaffConfirmation@Popup>
    autodismiss: False
    size_hint: 0.5, 0.2
    title_align: "center"
    id: staffTitle
    title: "Are you sure you want to add this person?"
    BoxLayout:
        Button:
            text: "Cancel"
            on_press: root.dismiss()
        Button:
            text: "Confirm"
            on_press: root.confirmStaff()

<StaffError@Popup>
    autodismiss: True
    size_hint: 0.5, 0.2
    title_align: "center"
    title: "Error: no input"

<StaffPad>
    orientation: "vertical"
    Button:
        text: "DESELECT"
        on_press: root.selectStaff()
    Button:
        text: "ADD"
        on_press: root.confirmStaff()
    TextInput:
        id: textInput

<StaffSelection>
    size_hint_y: None
    height: 70
    BoxLayout:
        Label: 
            id: staffTitle
            text: "-"
            text_size: self.width, None
            height: self.texture_size[1]
            markup: True
            halign: "center"
            valignL: "middle"
        Button:
            text: "Select"

<TestGrid>
    GridLayout:
        cols: 3
        size: root.width, root.height
        
        #PRODUCT SLICE
        BoxLayout:
            orientation: "vertical"
            id: prodGrid            

        BoxLayout:
            orientation: "vertical"
            id: keyGrid
            
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 2
            id: viewGrid
        BoxLayout:    
            orientation: "vertical"
            size_hint_y: 0.5
            Label:
                text: "STAFF"
                size_hint_y: None
                height: 70
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                GridLayout:
                    cols: 1
                    size_hint: (1.0, None)
                    height: self.minimum_height
                    pos: self.pos
                    id: staffContainer
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.5
            id: staffGrid
